@code {

    [Parameter]
    public long? RecipientId { get; set; }

    private HttpResponseMessage? res;
    private IEnumerable<CommentModel> comments;

    protected override async Task OnInitializedAsync()
    {
        var client = ClientFactory.CreateClient("OnebrbAPI");

        res = await client.GetAsync($"{Configuration["AppConfiguration:OnebrbAPIEndpoint"]}/comments?recipientId={RecipientId}");

        if (res.IsSuccessStatusCode)
        {
            comments = await client.GetFromJsonAsync<IEnumerable<CommentModel>>($"{Configuration["AppConfiguration:OnebrbAPIEndpoint"]}/comments?recipientId={RecipientId}");
        }
    }
}
